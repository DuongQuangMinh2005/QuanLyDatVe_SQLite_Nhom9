<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#202534">

    <!-- Hình nền mờ -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/airplane_background"
        android:scaleType="centerCrop"
        android:alpha="0.90" />

    <!-- Overlay tối -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D91E2136" />

    <!-- Nội dung chính -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="0dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="32dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="36dp">

            <!-- Tiêu đề -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đăng ký tài khoản người dùng"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#9dcaff"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="20dp"
                android:letterSpacing="0.02"
                android:shadowColor="#CC23293a"
                android:shadowDx="0"
                android:shadowDy="1"
                android:shadowRadius="6" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="22dp"
                app:cardElevation="12dp"
                app:cardBackgroundColor="#252C3D"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="22dp"
                    android:paddingRight="22dp"
                    android:paddingTop="26dp"
                    android:paddingBottom="26dp">

                    <!-- Username -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:boxCornerRadiusTopStart="14dp"
                        app:boxCornerRadiusTopEnd="14dp"
                        app:boxCornerRadiusBottomStart="14dp"
                        app:boxCornerRadiusBottomEnd="14dp"
                        app:boxBackgroundColor="#23293a"
                        app:boxStrokeColor="#8B5CF6"
                        app:boxStrokeWidth="2dp"
                        app:startIconDrawable="@drawable/ic_profile"
                        app:startIconTint="#b0beca"
                        android:hint="Tên đăng nhập"
                        android:textColorHint="#b0beca"
                        android:layout_marginBottom="12dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_username"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:inputType="textPersonName"
                            android:textColor="#cfd8dc"
                            android:textSize="16sp"
                            android:paddingStart="46dp"
                            android:paddingEnd="12dp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Password -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:boxCornerRadiusTopStart="14dp"
                        app:boxCornerRadiusTopEnd="14dp"
                        app:boxCornerRadiusBottomStart="14dp"
                        app:boxCornerRadiusBottomEnd="14dp"
                        app:boxBackgroundColor="#23293a"
                        app:boxStrokeColor="#8B5CF6"
                        app:boxStrokeWidth="2dp"
                        app:startIconDrawable="@drawable/ic_password"
                        app:startIconTint="#b0beca"
                        android:hint="Mật khẩu"
                        android:textColorHint="#b0beca"
                        android:layout_marginBottom="12dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_password"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:inputType="textPassword"
                            android:textColor="#cfd8dc"
                            android:textSize="16sp"
                            android:paddingStart="46dp"
                            android:paddingEnd="12dp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Họ tên -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:boxCornerRadiusTopStart="14dp"
                        app:boxCornerRadiusTopEnd="14dp"
                        app:boxCornerRadiusBottomStart="14dp"
                        app:boxCornerRadiusBottomEnd="14dp"
                        app:boxBackgroundColor="#23293a"
                        app:boxStrokeColor="#8B5CF6"
                        app:boxStrokeWidth="2dp"
                        app:startIconDrawable="@drawable/ic_edit"
                        app:startIconTint="#b0beca"
                        android:hint="Họ tên"
                        android:textColorHint="#b0beca"
                        android:layout_marginBottom="12dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edtHoTen"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:inputType="textPersonName"
                            android:textColor="#cfd8dc"
                            android:textSize="16sp"
                            android:paddingStart="46dp"
                            android:paddingEnd="12dp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Email -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:boxCornerRadiusTopStart="14dp"
                        app:boxCornerRadiusTopEnd="14dp"
                        app:boxCornerRadiusBottomStart="14dp"
                        app:boxCornerRadiusBottomEnd="14dp"
                        app:boxBackgroundColor="#23293a"
                        app:boxStrokeColor="#8B5CF6"
                        app:boxStrokeWidth="2dp"
                        app:startIconDrawable="@drawable/ic_email"
                        app:startIconTint="#b0beca"
                        android:hint="Email"
                        android:textColorHint="#b0beca"
                        android:layout_marginBottom="12dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_email"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:inputType="textEmailAddress"
                            android:textColor="#cfd8dc"
                            android:textSize="16sp"
                            android:paddingStart="46dp"
                            android:paddingEnd="12dp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Ngày sinh -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:boxCornerRadiusTopStart="14dp"
                        app:boxCornerRadiusTopEnd="14dp"
                        app:boxCornerRadiusBottomStart="14dp"
                        app:boxCornerRadiusBottomEnd="14dp"
                        app:boxBackgroundColor="#23293a"
                        app:boxStrokeColor="#8B5CF6"
                        app:boxStrokeWidth="2dp"
                        app:startIconDrawable="@drawable/ic_calendar"
                        app:startIconTint="#b0beca"
                        android:hint="Ngày sinh"
                        android:textColorHint="#b0beca"
                        android:layout_marginBottom="12dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edtNgaySinh"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:textColor="#cfd8dc"
                            android:textSize="16sp"
                            android:paddingStart="46dp"
                            android:inputType="none"
                            android:paddingEnd="12dp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Số điện thoại -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:boxCornerRadiusTopStart="14dp"
                        app:boxCornerRadiusTopEnd="14dp"
                        app:boxCornerRadiusBottomStart="14dp"
                        app:boxCornerRadiusBottomEnd="14dp"
                        app:boxBackgroundColor="#23293a"
                        app:boxStrokeColor="#8B5CF6"
                        app:boxStrokeWidth="2dp"
                        app:startIconDrawable="@drawable/ic_phone"
                        app:startIconTint="#b0beca"
                        android:hint="Số điện thoại"
                        android:textColorHint="#b0beca">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_phone"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:inputType="phone"
                            android:textColor="#cfd8dc"
                            android:textSize="16sp"
                            android:paddingStart="46dp"
                            android:paddingEnd="12dp"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Nút Đăng ký -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_dang_ky"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:text="Đăng ký"
                android:textSize="17sp"
                android:textColor="#f3eaff"
                app:cornerRadius="12dp"
                style="@style/Widget.MaterialComponents.Button"
                android:backgroundTint="#9141f7"
                android:elevation="8dp"
                android:layout_marginTop="12dp"/>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
